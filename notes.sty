% Box environments
\newtcbtheorem[number within=section]{boxdefine}{Definition}{toptitle=1mm,top=0mm,bottom=1mm,coltitle=orange!60!yellow!70!black!110,colback=yellow!15,colframe=yellow!15,fonttitle=\bfseries}{th}

\newtcbtheorem[number within=section]{boxnotation}{Alt. Notation}{toptitle=1mm,top=0mm,bottom=1mm,coltitle=red!40!black!80,colback=red!5,colframe=red!5,fonttitle=\bfseries}{th}

\newtcbtheorem[use counter from=boxdefine]{boxexample}{Example}{bottom=1mm,toptitle=1mm,top=0mm,coltitle=green!40!black,breakable,enhanced jigsaw,colback=green!10,colframe=green!10,fonttitle=\bfseries}{th}

\newtcbtheorem[use counter from=boxdefine]{boxproposition}{Proposition}{bottom=1mm,toptitle=1mm,top=0mm,coltitle=blue!50!black!80,colback=blue!5,colframe=blue!5,fonttitle=\bfseries}{th}

\newtcbtheorem[number within=boxdefine]{boxremark}{Remark}{bottom=1mm,toptitle=1mm,top=0mm,coltitle=brown!70!black,colback=brown!10,colframe=brown!10,enhanced jigsaw,breakable,fonttitle=\bfseries}{th}

% Title box
\definecolor{skyblue}{RGB}{125,212,216}
\newcommand*{\mytitle}[1]
{
	\title
	{
		\begin{tcolorbox}[colback=skyblue,colframe=skyblue]
			\begin{center}
				#1
			\end{center}
		\end{tcolorbox}
	}
}

