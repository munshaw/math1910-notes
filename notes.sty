% Box environments
\newtcbtheorem[number within=section]{boxdefine}{Definition}
{
	toptitle=1mm,
	top=0mm,
	bottom=1mm,
	left=1mm,
	right=1mm,
	coltitle=black!40!orangefive,
	colback=orangetwo,
	colframe=orangetwo,
	fonttitle=\bfseries
}{th}

\newtcbtheorem[number within=section]{boxnotation}{Alt. Notation}
{
	toptitle=1mm,
	top=0mm,
	bottom=1mm,
	left=1mm,
	right=1mm,
	coltitle=black!40!pinkfive,
	colback=pinktwo,
	colframe=pinktwo,
	fonttitle=\bfseries
}{th}

