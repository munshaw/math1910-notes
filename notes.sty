\theoremstyle{definition}
\newtheorem{definition}{Definition}[chapter]
\newcommand*{\mydefine}[1]
{
	\begin{tcolorbox}[colback=yellow!17!white,colframe=yellow!17!white]
		\begin{definition}
			#1
		\end{definition}
	\end{tcolorbox}
}

\theoremstyle{definition}
\newtheorem{example}[definition]{Example}
\newcommand*{\myexample}[1]
{
	\begin{tcolorbox}[colback=green!17!white,colframe=green!17!white]
		\begin{example}
			#1
		\end{example}
	\end{tcolorbox}
}

\theoremstyle{definition}
\newtheorem{proposition}[definition]{Proposition}
\newcommand*{\myproposition}[1]
{
	\begin{tcolorbox}[colback=blue!17!white,colframe=blue!17!white]
		\begin{proposition}
			#1
		\end{proposition}
	\end{tcolorbox}
}

\theoremstyle{definition}
\newtheorem*{remark}{Remark}
\newcommand*{\myremark}[1]
{
	\begin{tcolorbox}[breakable,colback=red!17!white,colframe=red!17!white]
		\begin{remark}
			#1
		\end{remark}
	\end{tcolorbox}
}

\definecolor{skyblue}{RGB}{125,212,216}
\newcommand*{\mytitle}[1]
{
	\title
	{
		\begin{tcolorbox}[colback=skyblue]
			\begin{center}
				#1
			\end{center}
		\end{tcolorbox}
	}
}

